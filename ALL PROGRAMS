          print("number is divisible by 5 and 11")
else:
    print("number is not divisible")

#21 student pass the exam if 1) atleast 35 in the theory 2) atleast 15 in practical 3)total is more than 60
theory=float(input("theory marks:"))
practical=float(input("practical marks:"))
if(theory>=35 and practical>=15):
           print("passed")
else:
           print("failed")


#22 to check the age group using if else if
age=int(input("enter your age:"))
if(age<13):
     print("you are a child:")
elif(age>=13 and age<19):
     print("you are a teenager")
else:
    print("adult")

#23 to check the grade using marks 
marks=int(input("enter your marks:"))
if(marks>=90):
       print("A")
elif(marks<90 and marks>=70):
       print("B")
elif(marks<70 and marks>=50):
       print("C")
elif(marks<50 and marks>=40):
       print("D")
else:
       print("FAIL")

#24 to check the week of the day
a=int(input("enter a number:"))
if(a==1):
        print("sunday")
elif(a==2):
        print("monday")
elif(a==3):
        print("tuesday")
elif(a==4):
        print("wednesday")
elif(a==5):
        print("thursday")
elif(a==6):
        print("friday")
elif(a==7):
        print("sunday")
else:
        print("invalid")

#25 to check the user name and password credintials
